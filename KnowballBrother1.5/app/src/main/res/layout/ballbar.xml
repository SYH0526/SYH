<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:background="#D9001B">

            <TextView
                android:id="@+id/tv_football"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="足球"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginLeft="22dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:background="#D9001B">

            <TextView
                android:id="@+id/tv_basketball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="篮球"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginLeft="22dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:background="#D9001B">

            <TextView
                android:id="@+id/tv_volleyball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="排球"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginLeft="22dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:background="#D9001B">

            <TextView
                android:id="@+id/tv_pingpong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="乒乓球"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="83dp"
            android:layout_height="40dp"
            android:background="#D9001B">

            <TextView
                android:id="@+id/tv_badminton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="羽毛球"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp">
            </TextView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="20dp">

            <ImageView
                android:id="@+id/iv_football"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/pt_target"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="10dp">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="20dp">

            <ImageView
                android:id="@+id/iv_basketball"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/pt_target"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="10dp"
                android:alpha="0">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="20dp">

            <ImageView
                android:id="@+id/iv_volleyball"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/pt_target"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="10dp"
                android:alpha="0">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="20dp">

            <ImageView
                android:id="@+id/iv_pingpong"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/pt_target"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="10dp"
                android:alpha="0">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="20dp">

            <ImageView
                android:id="@+id/iv_badminton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/pt_target"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="10dp"
                android:alpha="0">

            </ImageView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>